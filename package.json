{
  "name": "book-search",
  "version": "0.2.0",
  "description": "Google Books Search",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/icn2you/book-search.git"
  },
  "keywords": [
    "book",
    "book search",
    "Google Books",
    "MERN",
    "Mongo",
    "Mongoose",
    "React"
  ],
  "author": "Christopher B. Zenner",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/icn2you/book-search/issues"
  },
  "homepage": "https://github.com/icn2you/book-search#readme",
  "main": "server.js",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "if-env": "^1.0.4",
    "mongoose": "^5.9.25",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "nodemon": "^2.0.4"
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ]
  },
  "scripts": {
    "install": "cd client && npm install",
    "test": "npm run lint",
    "lint": "eslint . && cd client && npm run lint",
    "fix": "eslint --fix . && cd client && npm run fix",
    "client": "cd client && npm run start",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "start:prod": "node server.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  }
}
